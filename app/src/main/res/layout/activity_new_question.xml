<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.system.orgchatadmin.Activities.NewQuestion">

    <Button
        android:id="@+id/done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/list_questions"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/list_questions"
        android:text="Done" />

    <ListView
        android:id="@+id/list_questions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/done"
        android:layout_below="@+id/space4"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:divider="@null"
        android:dividerHeight="1dp" />

    <Space
        android:id="@+id/space4"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/choice" />

    <ImageButton
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/choice"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/space3"
        android:background="?android:attr/colorBackground"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        app:srcCompat="@android:drawable/ic_input_add" />

    <Space
        android:id="@+id/space3"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/verify" />

    <EditText
        android:id="@+id/choice"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_below="@+id/space3"
        android:layout_toLeftOf="@+id/verify"
        android:layout_toStartOf="@+id/verify"
        android:ems="10"
        android:hint="Choice"
        android:inputType="textPersonName"
        android:paddingLeft="10dp" />

    <ImageButton
        android:id="@+id/verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/question"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="?android:attr/colorBackground"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:srcCompat="@drawable/ic_tick" />

    <EditText
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/verify"
        android:layout_toStartOf="@+id/verify"
        android:ems="10"
        android:hint="Question"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:paddingTop="5dp" />
</RelativeLayout>
